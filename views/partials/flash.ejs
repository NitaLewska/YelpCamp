<% if(success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show mx-auto" role="alert" style="max-width: 350px;">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            </button>
    </div>
<% } %>

<% if(error && error.length) {%>
    <div class="alert alert-danger alert-dismissible fade show mx-auto" role="alert" style="max-width: 350px;">
        <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            </button>
    </div>
<% } %>