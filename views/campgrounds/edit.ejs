<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="campground[title]" class="form-control" id="title"
                    value="<%= campground.title %>">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="campground[location]" class="form-control" id="location"
                    value="<%= campground.location %>">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="text" name="campground[image]" class="form-control" id="image"
                    value="<%= campground.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="number" class="form-control" placeholder="0.00" aria-label="Price" id="price"
                        aria-describedby="price-label" name="campground[price]" value="<%= campground.price %>">
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" name="campground[description]" class="form-control"
                    id="description"><%= campground.description %></textarea>
            </div>
            <button class="btn btn-success mb-3">Update Campground</button>
        </form>
        <a href="/campgrounds/<%= campground._id %> ">Back To Campground</a>
    </div>